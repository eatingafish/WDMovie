<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/reg"
    android:padding="36dp"
    tools:context="com.bw.movie.activity.LoginActivity">


    <RelativeLayout
        android:id="@+id/Mr_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp">

        <ImageView
            android:id="@+id/mIv_Phone"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/phone" />

        <EditText
            android:id="@+id/mEt_Phone_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/mIv_Phone"
            android:layout_marginLeft="50dp"
            android:background="@null"
            android:hint="手机号"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/mIv_Phone"
            android:layout_marginTop="10dp"
            android:background="#ffffff"></View>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mR2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Mr_1"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/mIv_lock"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/lock" />

        <EditText
            android:id="@+id/mEt_Pwd_Login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/mIv_lock"
            android:layout_marginLeft="50dp"
            android:background="@null"
            android:hint="登录密码"
            android:password="true"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff" />

        <ImageView
            android:id="@+id/mIv_eye"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/eye" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/mIv_lock"
            android:layout_marginTop="10dp"
            android:background="#ffffff"></View>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mR3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mR2"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical">

        <CheckBox
            android:id="@+id/mCb_Pwd_Login"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/item_check"
            android:button="@null" />

        <TextView
            android:id="@+id/mTv_Reummber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/mCb_Pwd_Login"
            android:text="记住密码"
            android:textColor="#ffffff"
            android:textSize="14sp" />


        <CheckBox
            android:id="@+id/mCb_Auto_Login"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/mTv_Reummber"
            android:background="@drawable/item_check"
            android:button="@null" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/mCb_Auto_Login"
            android:text="自动登录"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <Button
            android:id="@+id/mBt_ToReg_Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="-15dp"
            android:background="@null"
            android:padding="0dp"
            android:text="快速注册"
            android:textColor="#ffffff"
            android:textSize="14sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/mBt_Login"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="120dp"
        android:background="@drawable/reg_bg"
        android:text="登录"
        android:textColor="#fff" />

    <LinearLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="75dp"
        android:gravity="center"
        android:orientation="horizontal">
        <!--画左边的那条线-->
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@android:color/darker_gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="第三方账号快速登录"
            android:textColor="@android:color/white" />
        <!--画右边的那条线-->
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@android:color/darker_gray" />
    </LinearLayout>

    <ImageView
        android:id="@+id/mIv_WeChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:src="@drawable/wechat" />

</RelativeLayout>