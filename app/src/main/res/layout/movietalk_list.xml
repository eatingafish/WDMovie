<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/talk_touxiang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/touxiang"
            />
        <TextView
            android:id="@+id/talk_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="终极战士"
            android:layout_gravity="center"
            android:textColor="#333333"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/talk_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="还可以吧，好看好看 安居技能就放v局部绝代风华发的v很多分饭局的饭局就放v不羁的风VB"
        android:layout_marginTop="10dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:id="@+id/talk_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="10-26 13:03"
            />
        <com.sackcentury.shinebuttonlib.ShineButton
            android:id="@+id/talk_zan"
            android:layout_marginLeft="150dp"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerInParent="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/tv"
            android:src="@android:color/darker_gray"
            app:allow_random_color="false"
            app:big_shine_color="#FF6666"
            app:btn_color="@android:color/darker_gray"
            app:btn_fill_color="#FF6666"
            app:click_animation_duration="200"
            app:enable_flashing="false"
            app:shine_animation_duration="1500"
            app:shine_count="8"
            app:shine_distance_multiple="1.5"
            app:shine_turn_angle="10"
            app:siShape="@raw/like"
            app:small_shine_color="#CC9999"
            app:small_shine_offset_angle="20" />
        <TextView
            android:id="@+id/zannum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_marginLeft="6dp"
            android:textSize="12sp"
            android:textColor="#666666"
            />

        <ImageView
            android:id="@+id/talk_message"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="18dp"
            android:src="@mipmap/talk" />

        <TextView
            android:id="@+id/talk_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="80"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"
            android:textColor="#666666"
            />
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="#dddd"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />
</LinearLayout>
