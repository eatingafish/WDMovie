<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/talk_touxiang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/touxiang"
            />
        <TextView
            android:id="@+id/talk_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="终极战士"
            android:layout_gravity="center"
            android:textColor="#333333"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/talk_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="还可以吧，好看好看 安居技能就放v局部绝代风华发的v很多分饭局的饭局就放v不羁的风VB"
        android:layout_marginTop="10dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:id="@+id/talk_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="10-26 13:03"
            />
        <CheckBox
            android:id="@+id/talk_zan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:text="1622"
            android:drawableLeft="@drawable/zan_change"
            android:layout_marginLeft="170dp"
            />
        <ImageView
            android:id="@+id/talk_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/talk"
            android:layout_marginLeft="20dp"
            />

        <TextView
            android:id="@+id/talk_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="80"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="#dddd"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />
</LinearLayout>
