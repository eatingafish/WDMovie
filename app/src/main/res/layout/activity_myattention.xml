<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bw.movie.my.Myattention">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/myattention_bt_movie"
                android:layout_width="83dp"
                android:layout_height="25dp"
                android:layout_marginRight="32dp"
                android:background="@drawable/myattention_bg"
                android:text="电影"
                android:textColor="#666666"
                android:textSize="14sp" />

            <Button
                android:id="@+id/myattention_bt_cinema"
                android:layout_width="83dp"
                android:layout_height="25dp"
                android:background="@drawable/myattention_bg2"
                android:text="影院"
                android:textColor="#666666"
                android:textSize="14sp" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/myattention_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="24dp"></android.support.v7.widget.RecyclerView>
    </LinearLayout>

    <ImageView
        android:id="@+id/myattention_iv_back"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/back" />
</RelativeLayout>
