<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="186dp"
                    android:background="@drawable/banner_bgm">

                </LinearLayout>

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:padding="6dp"
                    android:src="@drawable/com_icon_loc_white_default" />

                <recycler.coverflow.RecyclerCoverFlow
                    android:id="@+id/mBanner"
                    android:layout_width="match_parent"
                    android:layout_height="223dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="85dp"
                    android:layout_marginRight="24dp"></recycler.coverflow.RecyclerCoverFlow>
            </RelativeLayout>

            <View
                android:layout_width="312dp"
                android:layout_height="3dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/viewbg_shape" />

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="20sp"
                android:layout_marginRight="24dp">

                <RelativeLayout
                    android:id="@+id/mRl_Popular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/rmdy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="热门电影"
                        android:textColor="#333333"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/com_icon_next_default" />

                    <View
                        android:id="@+id/v1"
                        android:layout_width="30dp"
                        android:layout_height="3dp"
                        android:layout_below="@+id/rmdy"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/movie_down"></View>
                </RelativeLayout>


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/mRv_Popular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mRl_Popular"
                    android:layout_marginTop="20dp"
                    ></android.support.v7.widget.RecyclerView>
            </RelativeLayout>

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="20sp"
                android:layout_marginRight="24dp">

                <RelativeLayout
                    android:id="@+id/mRl_Well"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/rmdy1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="正在热映"
                        android:textColor="#333333"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/com_icon_next_default" />

                    <View
                        android:layout_width="30dp"
                        android:layout_height="3dp"
                        android:layout_below="@+id/rmdy1"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/movie_down"></View>
                </RelativeLayout>


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/mRv_Well"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mRl_Well"
                    android:layout_marginTop="20dp"></android.support.v7.widget.RecyclerView>
            </RelativeLayout>

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="20sp"
                android:layout_marginRight="24dp">

                <RelativeLayout
                    android:id="@+id/mRl_Soon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/rmdy2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="即将上映"
                        android:textColor="#333333"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/com_icon_next_default" />

                    <View
                        android:layout_width="30dp"
                        android:layout_height="3dp"
                        android:layout_below="@+id/rmdy2"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/movie_down"></View>
                </RelativeLayout>


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/mRv_Soon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mRl_Soon"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"></android.support.v7.widget.RecyclerView>
            </RelativeLayout>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
