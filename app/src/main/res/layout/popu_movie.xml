<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:background="#00000000"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="110dp"
        android:background="@drawable/popu_shape"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="155dp"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/leixing"
                        android:textSize="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1111"/>

                    <TextView
                        android:id="@+id/daoyan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11111"
                        android:textSize="10sp"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/down"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/com_icon_down_default"/>

            </LinearLayout>

            <TextView
                android:id="@+id/shichang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="11111111"/>

            <TextView
                android:id="@+id/chandi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="1111"
                android:textSize="10sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="24dp"
            android:layout_marginTop="40dp">

            <TextView
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="剧情简介"/>
            <View
                android:layout_width="35dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_shou_lien"
                android:layout_height="2dp"/>

            <TextView
                android:id="@+id/juqing"
                android:layout_width="match_parent"
                android:layout_marginTop="10sp"
                android:layout_height="wrap_content" />


            <TextView
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="演员人员"/>
            <View
                android:layout_width="35dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_shou_lien"
                android:layout_height="2dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10sp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:textColor="#fff"
                    android:background="@drawable/my_sign_shape1"
                    android:text="演员名字"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:textColor="#fff"
                    android:background="@drawable/my_sign_shape1"
                    android:text="演员名字"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv2"
        android:layout_marginLeft="24dp"
        android:layout_width="111dp"
        android:layout_height="149dp"
        android:layout_marginTop="90dp"/>
</RelativeLayout>