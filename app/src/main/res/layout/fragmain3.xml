<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/mybackground"
        >
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/remind"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="24dp"
            />
        <ImageView
            android:id="@+id/my_head"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/myhead"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            />
        <TextView
            android:id="@+id/my_name"
            android:layout_below="@id/my_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="冬天来了"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:textColor="#fff"
            />
        <Button
            android:id="@+id/my_qiandao"
            android:layout_width="66dp"
            android:layout_height="28dp"
            android:text="签到"
            android:background="@drawable/myqiandao_bg"
            android:textColor="#fff"
            android:textSize="14sp"
            android:layout_below="@id/my_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:background="@drawable/item_shape"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/my_iv_message"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/message"
            android:layout_marginLeft="45dp"
            />
        <TextView
            android:id="@+id/my_tv_message"
            android:layout_below="@id/my_iv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#666666"
            android:text="我的信息"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:background="@drawable/item_shape"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/my_iv_attention"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/attention"
            android:layout_marginLeft="45dp"
            />
        <TextView
            android:id="@+id/my_tv_attention"
            android:layout_below="@id/my_iv_attention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#666666"
            android:text="我的关注"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            />

        <ImageView
            android:id="@+id/my_iv_rccord"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="85dp"
            android:layout_toRightOf="@id/my_iv_attention"
            android:src="@drawable/rccord" />
        <TextView
            android:id="@+id/my_tv_rccord"
            android:layout_toRightOf="@id/my_iv_attention"
            android:layout_below="@id/my_iv_rccord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#666666"
            android:text="购票记录"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:background="@drawable/item_shape"
        android:gravity="center_vertical"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/my_iv_feedback"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/feedback"
                android:layout_marginLeft="45dp"
                />
            <TextView
                android:id="@+id/my_tv_feedback"
                android:layout_below="@id/my_iv_feedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#666666"
                android:text="我的关注"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        <ImageView
            android:id="@+id/my_iv_version"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/version"
            android:layout_marginLeft="60dp"
            />
        <TextView
            android:id="@+id/my_tv_version"
            android:layout_below="@id/my_iv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#666666"
            android:text="最新版本"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="10dp"
            />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="30dp"
            >
        <ImageView
            android:id="@+id/my_iv_loginout"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/logout"
            android:layout_marginLeft="60dp"
            />
        <TextView
            android:id="@+id/my_tv_loginout"
            android:layout_below="@id/my_iv_loginout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#666666"
            android:text="退出登录"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="10dp"
            />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
